			<!--ADD CART ITEM-->

		<checkout_cart_add_product_complete>
			<observers>
				<analytics_cart_add>
					<class>analytics/observer</class>
					<method>logCartAdd</method>
					<type>singleton</type>
				</analytics_cart_add>
			</observers>
		</checkout_cart_add_product_complete>

		<checkout_cart_product_add_before>
			<observers>
				<analytics_cart_add>
					<class>analytics/observer</class>
					<method>logCartAdd</method>
					<type>singleton</type>
				</analytics_cart_add>
			</observers>
		</checkout_cart_product_add_before>

		<checkout_cart_product_add_after>
			<observers>
				<analytics_cart_add>
					<class>analytics/observer</class>
					<method>logCartAdd</method>
					<type>singleton</type>
				</analytics_cart_add>
			</observers>
	    </checkout_cart_product_add_after>

			<!--UPDATE CART ITEM-->

			<checkout_cart_update_items_before>
				<observers>
					<analytics_cart_add>
						<class>analytics/observer</class>
						<method>logCartUpdate</method>
						<type>singleton</type>
					</analytics_cart_add>
				</observers>
			</checkout_cart_update_items_before>

			<!--REMOVE CART ITEM-->
	    
	    <sales_quote_remove_item>
	    	<observers>
		    <analytics_cart_remove>
			<class>analytics/observer</class>
			<method>logCartRemove</method>
			<type>singleton</type>
		    </analytics_cart_remove>
		</observers>
	    </sales_quote_remove_item>

			<!--LOGOUT-->
	    
	    <customer_logout>
	    	<observers>
	    	    <analytics_logout>
	    		<class>analytics/observer</class>
	    		<method>logCustomerLogout</method>
	    		<type>singleton</type>	
	    	    </analytics_logout>
	    	</observers>
	    </customer_logout>

			<!--LOGIN-->
	    
	    <customer_login>
	    	<observers>
	    	    <analytics_login>
	    		<class>analytics/observer</class>
	    		<method>logCustomerLogin</method>
	    		<type>singleton</type>	
	    	    </analytics_login>
	    	</observers>
	    </customer_login>

			<!--REGISTER ACCOUNT-->

	    <customer_register_success>
	    	<observers>
	    	    <analytics_register>
	    		<class>analytics/observer</class>
	    		<method>logCustomerRegister</method>
	    		<type>singleton</type>	
	    	    </analytics_register>
	    	</observers>
	    </customer_register_success>
	    
	    <catalogsearch_query_load_after>
	    	<observers>
	    	    <analytics_search>
	    		<class>analytics/observer</class>
	    		<method>logSearch</method>
	    		<type>singleton</type>	
	    	    </analytics_search>
	    	</observers>
	    </catalogsearch_query_load_after>

			<!--VIEW PRODUCT-->
	    
	    <catalog_controller_product_view>
	    	<observers>
	    	    <analytics_product>
	    		<class>analytics/observer</class>
	    		<method>logProductView</method>
	    		<type>singleton</type>	
	    	    </analytics_product>
	    	</observers>
	    </catalog_controller_product_view>

        </events>
    </global>
	
