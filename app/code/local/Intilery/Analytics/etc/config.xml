    <global>
	<models>
            <analytics>
                <class>Intilery_Analytics_Model</class>
            </analytics>
        </models>
	<helpers>
	    <analytics>
                <class>Intilery_Analytics_Helper</class>
            </analytics>
           <!--  <analytics_admincontroller>
